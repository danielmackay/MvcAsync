@using MvcAsync.Models
@model PeopleViewModel
@{
    ViewBag.Title = "Synchronous";
}

<h2>Synchronous</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>First</th>
            <th>Last</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Person p in Model.People)
        {
            <tr>
                <td>@p.FirstName</td>
                <td>@p.LastName</td>
                <td>@p.Role</td>
            </tr>
        }
    </tbody>
</table>

@using (Html.BeginForm())
{
    <div>
        @Html.DropDownList("selectedRole", new SelectList(Model.Roles))
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
}

<ul>
    @foreach (var role in Model.Roles)
    {
        <li>
            @Html.ActionLink(role, "Synchronous", "People", new { selectedRole = role }, null)
        </li>
    }
</ul>
